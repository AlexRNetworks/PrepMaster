rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users collection - allow read/write for PIN-based auth system
    match /users/{userId} {
      allow read, write: if true;
    }
    
    // Schedules - allow read/write
    match /schedules/{scheduleId} {
      allow read, write: if true;
    }
    
    // Schedule templates - allow read/write
    match /scheduleTemplates/{templateId} {
      allow read, write: if true;
    }
    
    // Recurring schedules - allow read/write
    match /recurringSchedules/{ruleId} {
      allow read, write: if true;
    }
    
    // Push tokens - allow read/write
    match /pushTokens/{tokenId} {
      allow read, write: if true;
    }

    // Prep logs - allow read/write
    match /prepLogs/{logId} {
      allow read, write: if true;
    }

    // Prep forecasts - allow read/write
    match /prepForecasts/{forecastId} {
      allow read, write: if true;
    }
  }
}
